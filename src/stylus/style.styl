.c-contact
  background-color: var(--color-background)
  border-radius: var(--border-radius-sm-clamp)
  padding: var(--margin-lg-clamp)

  &__title
    margin-top: 0
    margin-bottom: rem(12)

  &__text
    font-size: var(--font-size-sm)
    margin-bottom: 0


  &__phone
    display: flex
    align-items: center
    margin-bottom: rem(12)
    margin-top: rem(6)

  &__phone-icon
    display: flex
    justify-content: center
    align-items: center
    color: white
    background-color: $color.blue--darken--1
    line-height: 1
    font-size: var(--font-size-xs)
    margin-right: rem(4)
    padding: rem(8)
    // position: relative;
    // top: rem(-2)
    border-radius: 999px


  &__phone-number
    font-weight: bold
    font-size: var(--font-size-3l)

  &__button
    margin-top: rem(24)

.c-entry
  &__description
    font-weight: bold
  // &__header
  //   margin-top: rem(12)

  // &__content
  //   background-color: white

  //   +mq(tablet, max-width)
  //     padding: var(--container-gutter)
  //     margin-x: calc(var(--container-gutter) * -1)

  //   +mq(tablet)
  //     padding: var(--margin-lg-clamp)
  //     border-radius: rem(24)

  &__body
    // margin-top: calc(var(--margin-line) * 3)
    h2:not(.c-summary__title)
      border-left: rem(4) solid var(--color-primary)
      // padding-left: rem(9)
      // padding-y: rem(6)
      position: relative
      padding: rem(18) rem(16)
      background-color: $color.alpha--black--lighten--5
      border-top-right-radius 0.25rem
      border-bottom-right-radius: 0.25rem
      // border-radius: 0.25em

      // &::before
      //   position: absolute
      //   top: 0
