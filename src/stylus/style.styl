      //   bottom: 0
      //   content ''
      //   display: block
      //   width: rem(5)
      //   // background-color: var(--color-secondary)
      //   border-top: rem(3) solid var(--color-secondary)
      //   border-left: rem(3) solid var(--color-secondary)

      +mq(tablet)
        border-left-width: rem(4)
        padding-left rem(16)
        // margin-left: rem(-21)

    // > h3
    //   border-bottom: 1px solid var(--color-border)
    //   padding-bottom: rem(4)

.c-hero
  background-image: url(../images/hero.jpg)
  background-position: center right
  background-size: cover


.c-image-list
  display: flex
  flex-wrap: wrap
  cursor: pointer

  &__item
    display: flex
    flex-direction: column
    align-items: center
    position: relative

    &._red_
      background-color: $color.red

    &._blue_
      background-color: $color.blue

    &._black_
      background-color: $color.gray--darken--5

    &._yellow_
      background-color: $color.yellow

    &._white_
      background-color: #eceae4

    &._clear_
      background-color:#f3eddf

  &__image
    width: w = clamp(rem(42), 12vw, rem(60))
    height: w

    > img
      display: block


.c-material-archive
  display: block
  text-decoration: none
  color: var(--color-text)
  // padding: var(--margin-sm-clamp)
  height: 100%
  transition: 0.3s
  overflow: hidden

  // &:hover
  //   background-color: var(--color-background)

  &__image
    ratio(1 1)
    background-color: var(--color-background)
    border-radius: 4%
    overflow: hidden

    img
      object-fit: contain


  &__content
    margin-top: rem(6)
    text-align: center

  &__title
    margin: 0
    font-size: var(--font-size-md-clamp)

    +mq(fullhd)
      font-size: var(--font-size-sm)

  &__summary
    margin-top: rem(3)
    // font-size: var(--font-size-xs-clamp)
    font-size: var(--font-size-3s)
    color: var(--color-subtext)
    line-height: 1.25

.c-meta__item._tag_
  margin-top: var(--margin-line)
  display: flex
  flex-wrap: wrap

  & > a
    tag()
    margin-left: 0
    margin-bottom: rem(3)

.c-post-info
  padding-y: var(--margin-sm-clamp)

  background: white

  +mq(pc, max-width)
    text-align: center
    font-size: var(--font-size-sm)

  &__container
    +mq(pc)
      display: flex
      justify-content: center
      align-items: center

  &__date
    font-weight: bold

    +mq(pc, max-width)
      margin-bottom: rem(6)

    +mq(pc)
      margin: 0 rem(12) 0 0

  &__button
    margin-top: rem(12)

    +mq(pc)
      margin: 0 0 0 rem(48)

.c-sample
  &__item
    position: relative
    border-radius: rem(4)
    overflow: hidden

  &__img
    transition: 0.5s

    > img
      display: block

    ^[0]__item:hover &
      filter:  brightness(0.65)
      transform: scale(1.05)

  &__content
    opacity: 0
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    color: white
    transition: 0.5s


    ^[0]__item:hover &
      display: block
      opacity: 1

  &__title
    position: absolute
    bottom: 0
    width: 100%
    padding: rem(12) rem(8)
    margin-top: 0
    margin-bottom: 0
    font-size: var(--font-size-xs)
    font-weight: normal
    // display: flex
    // align-items: center
    // justify-content: center
    text-align: center

  &._page_
    display flex
    flex-wrap: wrap
    block-margin()

.c-user
  display: none

.download
  &__item
    background-color: var(--color-background)
    padding: var(--block-padding-lg)
    border-radius: rem(4)

  &__figure
    // background-color: var(--color-background)

    img
      display: block
      margin-x: auto
      width: 60%
      border-radius: rem(4)

  &__body
    margin-top: rem(12)

  &__title
    font-weight: 700
    font-size: var(--font-size-lg)

  &__content
    font-size: var(--font-size-sm)

  &__button
    margin-top: rem(12)
    width: 100%

.slick
  &-slide
    margin-x: rem(6)
    // background-color: white
    // height: auto

  &-arrow
    &:before
      color: var(--color-secondary)

  &-sample-single
    & ^[0]-track
      margin-left: 0

.c-section
  padding-y: var(--margin-xl-clamp)

  &__title
    font-size: var(--font-size-h1)
    text-align: center

  &__button
    text-align: center
    margin-top: var(--margin-line)

    > .button
      rounded()

.c-summary
  &._card_
    border-radius: 1%
  &._thumbnail_
    & ^[0]__footer
      display: none

  // &__description
  //   display: none

.contact {
  border-radius: rem(24)
  padding: var(--margin-md-clamp)
  block-margin()

  &--page {
    background: var(--color-background);
  }

  &__title {
    margin-top: 0;
  }

  &__text {
    font-weight: 700
    margin-top: rem(6);
    font-size: var(--font-size-xs)
  }

  &__phone {
    display: flex;
    align-items: center;
    font-size: var(--font-size-lg-clamp)
    margin-top: rem(6)

    &__icon {
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
      background-color: $color.blue;
      line-height: 1;
      circle(rem(24));
      font-size: var(--font-size-xs)
      margin-right: rem(4);
      position: relative;
      top: rem(-2);
    }

    &__number {
      font-size: var(--font-size-3l)
      font-family: roboto
      font-weight: 700;
    }
  }

  &__btn {
    margin-top: var(--margin-line)
  }
}

.l-footer
  &__brand
    font-size: var(--font-size-3s)
    color: $color.alpha--white--lighten--1

  &__body
    background-color: var(--color-primary)
    color: white
    a
      color $color.alpha--white--lighten--4 !important

.mw_wp_form_confirm {
  .hide-confirm {
    display: none;
  }
}

.p-global-nav
  box-shadow: none

.p-material-library
  &__loading
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    transition: opacity 0.3s

    background-color: rgba(255,255,255,1)
    box-shadow: 0 20px 20px -20px rgba(0,0,0,0.5)
    width: w = 136px
    height: h = 136px
    border-radius: rem(8)
    padding: rem(20)

    position: fixed
    top: 'calc(50vh - %s / 2)' % h
    left: 'calc(50vw - %s / 2)' % w
    z-index: 10000

    &__text
      margin-top: rem(3)

  &__buttonWrap
    text-align: center
    margin-top: calc(var(--margin-line) * 2)

  &__search-filter
    background-color: var(--color-background)
    padding: var(--grid-margin-lg)
    font-size: var(--font-size-sm)
    +mq(tablet, max-width)
      full()

    +mq(tablet)
      padding: var(--margin-lg-clamp)
      border-radius: var(--border-radius-md-clamp)

    .c-control__label
    .c-form-part__label
      font-size: var(--font-size-sm-clamp)

  &__body
    margin-top: var(--margin-line)

  &__reset
    text-align: center
    a
      color: var(--color-text)

  &__count
    font-weight: bold
    margin-top: 0

.p-preview-login
  background-color: var(--color-background)
  padding: var(--margin-md-clamp)
  border-radius: rem(16)

  .login-submit
    [type=submit]
      background-color: var(--button-color-submit)
      color: white


.p-sample
  &__title
    margin-top: 0
    margin-bottom: var(--margin-sm-clamp)

  &__summary
    margin-bottom: var(--margin-line)
    font-size: var(--font-size-md-clamp)
    font-weight: bold

  &__image
    position: relative
    overflow: hidden
    border-radius: rem(12)

    img
      border-radius: rem(12)

    &__text
      position: absolute
      right:0
      bottom: 0
      left: 0
      color: white
      padding: rem(12)
      padding-top: rem(72)
      font-size: var(--font-size-xs)
      background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5));

    img
      display: block

  &__thumbnail
    margin-top: var(--grid-margin-xs)
    border-radius: rem(12)
    overflow: hidden

    &__item
      img
        display: block
        border-radius: rem(4)

  &__tag
    display: flex
    flex-wrap: wrap

    &__item
      tag()
      margin-bottom: rem(4)

    &__a
      color: var(--color-text);

  &__description
    margin-top: var(--margin-lg-clamp)

  &__figcaption
    margin-top: rem(6)
    text-align: center
    font-size: var(--font-size-xs)
    color: var(--color-subtext)

.sample-data
  display: flex
  block-margin()
  background-color: var(--color-background)
  border-radius: rem(4)
  overflow: hidden
  align-items: center
  line-height: 2

  &__item
    display: flex
    flex-wrap: wrap
    flex-basis: 100%


  &__img
    square(rem(120))
    flex-shrink: 0

  &__content {
    padding: var(--block-padding-md)


    flex-grow: 1
    font-size: var(--font-size-sm)
  }

  &__title
    font-weight: bold
    margin-right: 1em

  &__data
    margin-left: auto
    text-align: right

.tablepress
  font-size: 0.8rem

  thead
    th
      background-color: #eee !important;

.dataTables_wrapper table.tablepress
.tablepress
  margin-top: calc(var(--margin-line)*1) !important

.vbox
  &-overlay
    background-color: $color.gray--darken--4 !important

  &-figlio
    box-shadow: none !important
    border: 1px solid $color.gray--darken--2

  &-content
    img
      max-height: calc(96vh - 40px)
